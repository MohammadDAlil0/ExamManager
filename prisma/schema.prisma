generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @default(autoincrement()) @id
  username String
  email String @unique
  role Role @default(STUDENT)
  hash String 
  exams Exam[]
}

model Exam {
  id Int @default(autoincrement()) @id
  name String
  duration Int
  date DateTime
  students User[]
  questions Question[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Question {
  id Int @default(autoincrement()) @id
  options String[]
  answer Int 
  exam Exam @relation(fields: [examId], references: [id])
  examId Int 
}

enum Role {
  TEACHER
  STUDENT
  MANAGER
}